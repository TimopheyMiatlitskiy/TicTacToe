<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tic Tac Toe Game" Height="300" Width="300">
    <Grid x:Name="gameGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Name="btn1" Click="Button_Click" />
        <Button Grid.Row="0" Grid.Column="1" Name="btn2" Click="Button_Click" />
        <Button Grid.Row="0" Grid.Column="2" Name="btn3" Click="Button_Click" />

        <Button Grid.Row="1" Grid.Column="0" Name="btn4" Click="Button_Click" />
        <Button Grid.Row="1" Grid.Column="1" Name="btn5" Click="Button_Click" />
        <Button Grid.Row="1" Grid.Column="2" Name="btn6" Click="Button_Click" />

        <Button Grid.Row="2" Grid.Column="0" Name="btn7" Click="Button_Click" />
        <Button Grid.Row="2" Grid.Column="1" Name="btn8" Click="Button_Click" />
        <Button Grid.Row="2" Grid.Column="2" Name="btn9" Click="Button_Click" />
    </Grid>
</Window>
